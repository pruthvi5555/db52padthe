extends layout

block content
  h1= title
  -let fans =results  
   div(class="container-fluid")
        div(class="row m-1")
             
            each f in fans 
                - let destination = `dispatch(\"/fans/update?id=${f._id}\")`
                div(class="row-sm-2", class="m-1") fan #{f.CompanyName} (#{f.fanType}) is #{f.price}
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
            script.
                function dispatch(path){
                   window.location.href=path
                }