extends layout

block content
  h1= title
  p The list of fans 
   div(class="container-fluid")
        div(class="row")
            -
                let fans = [
                    {
                        "CompanyName": "Bajaj",
                        "Type": "ceiling",
                        "price": "60"                        
                    },
                    {
                        "CompanyName": "Crompton",
                        "Type": "Table",
                        "price": "100"
                    },
                    {
                        "CompanyName": "Havells",
                        "Type": "Tower fan",
                        "price": "120"
                    },                   
                ]
            each f, index in fans 
                div(class="col-sm-2" onclick=`buy(${index})`) #{f.CompanyName}
                br 
                div(class="col-sm-2" onclick=`buy(${index})`) #{f.Type}
                br
                div(class="col-sm-2" onclick=`buy(${index})`) #{f.price}
            script.
                function buy(itemNo){
                    alert(`You purchased Item ${itemNo+1}`)
                }  