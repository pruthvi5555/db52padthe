extends layout

block content
  - let create = `dispatch(\"/fans/create\")`
  button.btn(class="btn-primary mb-2" onclick=create) Add a fan
   h1= title
     
    div(class="container-fluid")
        div(class="row m-1")
            -let fans =results
            each f in fans 
                - let destination = `dispatch(\"/fans/update?id=${f._id}\")`
                - let del = `dispatch(\"/fans/delete?id=${f._id}\")`
                - let detail = `dispatch(\"/fans/detail?id=${f._id}\")`
                div(class="row-sm-2", class="m-1") fan #{f.CompanyName} (#{f.fanType}) is #{f.price}
                    button.btn( class="btn-primary ml-1", onclick= destination) Update
                    button.btn( class="btn-primary ml-1", onclick= del) delete
                    button.btn( class="btn-primary ml-1", onclick= detail) detail
            script.
                function dispatch(path){
                   window.location.href=path
                }